# Puerto del servidor HTTP
PORT=3001

# Entorno: development | production | test
NODE_ENV=development

# Base de datos MySQL (no pongas tu password real aquí)
DB_HOST=127.0.0.1
DB_USER=usuario_example
DB_PASSWORD=changeme
DB_NAME=padihersystem_lab

# JWT (clave de ejemplo, cámbiala en .env real)
JWT_SECRET=please_change_me

# Zona horaria usada por cron
CRON_TZ=America/Mexico_City

# Orígenes permitidos (frontend local)
CLIENT_ORIGIN=http://localhost:5173

# PIN admin para móvil (placeholder)
MOBILE_ADMIN_PIN=PADIPIN-XXXX

# ===== Opcionales recomendados =====
# LOG_LEVEL: error|warn|info|debug
LOG_LEVEL=info
# Habilitar CORS credenciales (true/false)
CORS_CREDENTIALS=false
